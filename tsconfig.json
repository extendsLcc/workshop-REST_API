{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ES2022"],
    "skipLibCheck": true
  },
  "include": ["**/*", ".eslintrc"],
  "exclude": ["**/dist", "**/node_modules", "**/coverage"]
}
